<% provide(:title,"New Project") %>
<div id="general_body">
	<h2 class="title">New Project Entry</h2>
	<div class="content">
	<%= form_for(@project) do |f| %>
		<%= render 'shared/error_messages' %>
		<p><%= f.label :title %><%= f.text_field :title %></p>
		<p><%= f.label :subtitle %><%= f.text_field :subtitle %></p>
		<p><%= f.label :description %><br />
		<%= f.text_area :description, size: "75x12" %></p>
		<p><%= f.label :images %><%= f.text_field :images %></p>
		<p><%= f.label :section %>
		<select id="project_section" name="project[section]" type="text">
			<option value="design">3D Design</option>
			<option value="art">Digital Art</option>
			<option value="effects">Visual Effects</option>
		</select></p>
		<%= f.submit "Submit" %>
	<% end %>
</div>
</div>