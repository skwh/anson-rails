<% provide(:title,"New Project") %>
<div id="general_body">
	<h2>New Project Entry</h2>
	<%= form_for(@project) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<br />
		<%= f.label :subtitle %>
		<%= f.text_field :subtitle %>
		<br />
		<%= f.label :description %><br />
		<%= f.text_area :description %>
		<br />
		<%= f.label :section %>
		<select id="project_section" name="project[section]" type="text">
			<option value="design">3D Design</option>
			<option value="art">Digital Art</option>
			<option value="effects">Visual Effects</option>
		</select>
		<br />
		<%= f.submit "Submit" %>
	<% end %>
</div>